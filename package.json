  },
  "engines": {
    "node": ">=18"
  },
  "bugs": {
    "url": "https://github.com/MaheshDoiphode/reposentry/issues"
  },
  "homepage": "https://github.com/MaheshDoiphode/reposentry#readme",
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
